<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <h2>Create Runner Profile</h2>

            <form class="signup_runner">

                <div class="form-group">
                    <label for="firstname">First name</label>
                    <input type="text" class="form-control" id="fname-input" placeholder="Jane" required>
                </div>
                <div class="form-group">
                    <label for="lastname">Last name</label>
                    <input type="text" class="form-control" id="lname-input" placeholder="Doe" required>
                </div>
                <div class="form-group">
                    <label for="firstname">City</label>
                    <input type="text" class="form-control" id="city-input" placeholder="Alexandria, VA" required>
                </div>
                <div class="form-group">
                    <label for="gender">Gender</label>
                    <input type="radio" name="gender" id="sex" value="0" required> Male<br>
                    <input type="radio" name="gender" id="sex" value="1" required checked> Female
                </div>
                <div class="form-group">
                    <label for="dob">Date of Birth</label>
                    <input type="date" name="bday" class="form-control" id="dob" min="1900-12-31" max="2050-12-31" required>
                </div>

                <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                    <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                    <span class="sr-only">Error:</span> <span class="msg">Error</span>
                </div>
                <button type="submit" class="btn btn-default">Create Runner</button>
            </form>
        </div>
    </div>
    
</div>


